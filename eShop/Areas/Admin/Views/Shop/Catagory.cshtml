@model IEnumerable<eShop.Areas.Admin.Models.Catagory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Catagory</h2>

<div class="new-cat">
    <input type="text" id="newcatname" />
    <p>
        <a href="#" id="newcata">Add new catagory</a>
        <span class="ajax-text">
            <img src="~/Content/img/ajax-loader.gif" />
        </span>
    </p>
</div>
@if (!Model.Any())
{
    <h1 class="text-center">There is no Catagories here</h1>
}
else
{
    <table class="table table-hover table-stripped">
        <tr class="home">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                    @Html.EditorFor(modelItem => item.Name, new { HtmlAttribute = new { @class = "form-control", @readonly = "readonly" } });
                </td>

                <td>
                    @Html.ActionLink("Delete", "DeleteCatagory", new { id = item.Id }, new { @class = "delete" })
                </td>
            </tr>
        }

    </table>

}
