@model IEnumerable<eShop.Areas.Admin.Models.Page>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create Page", "AddPage")
</p>
<table class="table table-striped table-bordered table-hover ">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Slug)
            </th>

            <th scope="col">
                @Html.DisplayNameFor(model => model.HasSidebar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int RowNo = 0;}
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@{RowNo++;}@RowNo</th>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.HasSidebar)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditPage", new { id = item.Id }, new { @class = "btn btn-outline-primary btn-sm" })
                    @Html.ActionLink("Details", "PageDetails", new { id = item.Id }, new { @class = "btn btn-outline-info btn-sm" })
                    @Html.ActionLink("Delete", "DeletePage", new { id = item.Id }, new { @class = "delete btn btn-outline-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>

    

</table>
@section scripts
{
    <script>
        $(function () {
            $(".delete").click(function () {
                if (confirm("Are you sure want to delete ?"))
                    return true;
                else {
                    return false;
                }
            });
        });
    </script>
}